{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "sourceMap": false,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "types"
  }
}
